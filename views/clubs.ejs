<% include ./partials/header %>

<div class="container">
	
	<header class="jumbotron" >
		<div class="container">
			
		<h1>
			SFU Student Clubs
		</h1>
		<p>
			View, rate, and comment on SFU Students Clubs
		</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/clubs/new">Add new Club</a>
		</p>
		</div>
	</header>
	
	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% clubs.forEach(function(clubs){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= clubs.image %>">
				<div class="caption">
					<h4>
						<%= clubs.name %>
					</h4>
				</div>

			</div>
		</div>
		<% }); %>
		</div>
	</div>

<% include ./partials/footer %>